{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "/merchant-signup",
    "title": "merchant-signup",
    "description": "This Schema contains all the fields required to register Merchnat",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "phone_number": {
            "type": "string",
            "minLength": 10,
            "maxLength": 10
        },
        "email_id": {
            "type": "string",
            "format": "email"
        },
        "password": {
            "type": "string",
            "pattern": "^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[$@#!%*?&]).{6,20}$"
        },
        "dob": {
            "description": "YYYY-MM-DD",
            "type": "string",
            "format": "date"
        },
        "address": {
            "type": "object",
            "properties": {
                "street1": {
                    "type": "string"
                },
                "street2": {
                    "type": "string"
                },
                "street3": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "state": {
                    "type": "string"
                },
                "district": {
                    "type": "string"
                },
                "pin_code": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                }
            },
            "required": ["street1", "city", "state", "district", "pin_code", "country"]
        },
        "is_active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
    },
    "required": ["first_name", "last_name", "phone_number", "email_id", "password", "dob", "address"]
}