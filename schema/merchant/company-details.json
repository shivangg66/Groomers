{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "/company-details",
    "title": "company-details",
    "description": "Company Details",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "location": {
            "type": "object",
            "properties": {
                "latitude": {
                    "type":"string",
                    "minimum": -90,
                    "maximum": 90
                },
                "longitude": {
                    "type":"string",
                    "minimum": -180,
                    "maximum": 180
                }
            }
        },
        "phone_number": {
            "type": "string",
            "maxLength": 10,
            "minLength": 10
        },
        "address": {
            "type": "object",
            "properties": {
                "street1": {
                    "type": "string"
                },
                "street2": {
                    "type": "string"
                },
                "street3": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "state": {
                    "type": "string"
                },
                "district": {
                    "type": "string"
                },
                "pin_code": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                }
            },
            "required": ["street1", "city", "state", "district", "pin_code", "country"]
        },
        "email_id": {
            "type": "string",
            "format": "email"
        },
        "description": {
            "type": "string"
        },
        "is_active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
    },
    "required": ["name", "phone_number", "email_id", "location", "", "address"]
}